<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.solandme.universal_congratulator.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/first_header"
                android:textSize="30sp"
                android:id="@+id/textView"
                android:padding="10dp" />

            <RelativeLayout
                android:id="@+id/newYear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#B2EBF2"
                android:onClick="onClick">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/ic_december"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textNewYear"
                    android:id="@+id/textNewYear"
                    android:textSize="30sp"
                    android:textStyle="normal|italic"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView2"
                    android:layout_toEndOf="@+id/imageView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/textDays"
                    android:id="@+id/textDaysForNewYear"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textNewYear"
                    android:layout_toEndOf="@+id/textNewYear"
                    android:layout_marginLeft="40dp"
                    android:textSize="30sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F8BBD0"
                android:onClick="onClick"
                android:id="@+id/valentine">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageView"
                    android:src="@drawable/ic_february"
                    android:layout_gravity="left|center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textValentineDay"
                    android:id="@+id/textValentineDay"
                    android:textSize="30sp"
                    android:layout_gravity="center|right"
                    android:textStyle="italic"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/textDays"
                    android:id="@+id/textDaysForValentine"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/textValentineDay"
                    android:layout_toEndOf="@+id/textValentineDay"
                    android:layout_marginLeft="40dp"
                    android:textSize="30sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF9C4"
                android:id="@+id/mansDay"
                android:onClick="onClick">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/ic_23february"
                    android:layout_gravity="left|center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text23February"
                    android:id="@+id/text23February"
                    android:textSize="30sp"
                    android:textStyle="italic"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_toEndOf="@+id/imageView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/textDays"
                    android:id="@+id/textDaysForMansDay"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text23February"
                    android:layout_toEndOf="@+id/text23February"
                    android:layout_marginLeft="40dp"
                    android:textSize="30sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DCEDC8"
                android:id="@+id/womansDay"
                android:onClick="onClick">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/ic_8march"
                    android:layout_gravity="left|center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text8March"
                    android:id="@+id/text8March"
                    android:textSize="30sp"
                    android:textStyle="italic"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView4"
                    android:layout_toEndOf="@+id/imageView4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="@string/textDays"
                    android:id="@+id/textDaysForWomanDay"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text8March"
                    android:layout_toEndOf="@+id/text8March"
                    android:textSize="30sp"
                    android:layout_marginLeft="40dp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
