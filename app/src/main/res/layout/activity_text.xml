<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.solandme.universal_congratulator.TextActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textFldEmpty"
        android:id="@+id/textCongratulate"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="italic"
        android:theme="@style/AppTheme" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textBtnSendSMS"
        android:id="@+id/btnSendSMS"
        android:layout_below="@+id/textCongratulate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textBtnNext"
        android:id="@+id/btnNext"
        android:layout_alignTop="@+id/btnSendSMS"
        android:layout_toRightOf="@+id/btnSendSMS"
        android:layout_toEndOf="@+id/btnSendSMS"
        android:textSize="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textBtnBefore"
        android:id="@+id/btnBefore"
        android:layout_alignTop="@+id/btnSendSMS"
        android:layout_toLeftOf="@+id/btnSendSMS"
        android:layout_toStartOf="@+id/btnSendSMS"
        android:textSize="10dp" />
</RelativeLayout>
